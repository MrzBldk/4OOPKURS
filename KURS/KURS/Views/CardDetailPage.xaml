<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KURS.Views.CardDetailPage"
             xmlns:service="clr-namespace:KURS.Services">
    <ContentPage.Resources>
        <ResourceDictionary>
            <service:ByteImageConverter x:Key="conv"/>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout>
            <Image Source="{Binding Photo, Converter={StaticResource conv}}"/>
            <Label Text="Number:" FontSize="Medium"/>
            <Label Text="{Binding Number}" FontSize="Small"/>
            <Button Text="Delete" Command="{Binding DeleteCardCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>